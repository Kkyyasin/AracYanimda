@model Fatura
<div class="container container2 mt-5">
    <h2>Ödeme Detayları</h2>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ödeme #@Model.PaymentId</h4>
            <p class="card-text"><strong>Kullanıcı:</strong> @Model.KullaniciIsmı</p>
            <p class="card-text"><strong>Araç:</strong> @Model.AracIsmi</p>
            <p class="card-text"><strong>Miktar:</strong> @Model.Miktar TL</p>
            <p class="card-text"><strong>Ödeyen:</strong> @Model.AdSoyad</p>
            <p class="card-text"><strong>Ödeme Yöntemi:</strong> Kredi Kartı</p>
            <p class="card-text"><strong>Kart Numarasi:</strong> @Model.KartNumarasi</p>
            <p class="card-text"><strong>Kiralama Türü:</strong> @Model.Tur</p>

            <a href="#" class="btn btn-primary">Geri Dön</a>
        </div>
    </div>

</div>
<style>
    .container2 {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 30px;
    }

    h2 {
        font-size: 2.5rem;
        color: #0056b3;
        margin-bottom: 20px;
    }

    /* Card Stilleri */
    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        /* Alt boşluk */
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        color: #007bff;
        margin-bottom: 15px;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 10px;
    }

    /* Buton Stilleri */
    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        color: white;
        font-size: 1rem;
        transition: background-color 0.2s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    /* Özelleştirilmiş Detaylar ve Badge Stilleri */
    .badge-success {
        background-color: #28a745;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-size: 0.875em;
    }
</style>