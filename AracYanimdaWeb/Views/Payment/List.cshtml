@model IEnumerable<Payment>
    <div class="container container2 mt-5">
        <h2>Ödemeler Yönetimi</h2>

        <!-- Arama Formu -->
        <div class="mt-4 mb-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Ödeme arayın...">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button">Ara</button>
                </div>
            </div>
        </div>

        <!-- Ödemeler Tablosu -->
        <div>
            @if(Model != null){
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Odeme No</th>
                        <th>Miktar</th>

                        <th>Durum</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach(var payment in Model){
                    <tr>
                        <td>@payment.PaymentId</td>
                        <td>@payment.Miktar</td>
                        @if(@payment.OdemeDurumu=="Tamamlandi"){
                        <td><span class="badge badge-success">Tamamlandı</span></td>}
                        else{
                        <td><span class="badge badge-warning">Odenmedi</span></td>
                        }
                        <td><a style="text-decoration: none;color:white;" href="/Payment/Index/@payment.PaymentId"
                                class="btn btn-info btn-sm">Görüntüle</a></td>
                    </tr>}


                    <!-- Daha fazla kayıt... -->
                </tbody>
            </table>}
            else{ <div class="alert alert-warning" role="alert">
                Odeme bulunmamaktadır.
            </div>}
        </div>
    </div>
    <style>
        /* Genel Stiller */
        /* Genel Stiller */

        .container2 {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 30px;
        }

        h2 {
            font-size: 2.5rem;
            color: #0056b3;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #eee;
        }

        /* Arama Formu Stilleri */
        .input-group {
            margin-bottom: 20px;
        }

        .input-group .form-control {
            border-radius: 20px 0 0 20px;
            border: 1px solid #ccc;
        }

        .input-group .btn {
            border-radius: 0 20px 20px 0;
            border: 1px solid #ccc;
            color: #fff;
            background-color: #007bff;
        }

        /* Tablo Stilleri */
        .table {
            margin-top: 20px;
            border-collapse: collapse;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-weight: normal;
        }

        .table-hover tbody tr:hover {
            background-color: #f2f2f2;
        }

        /* Buton Stilleri */
        .btn-primary,
        .btn-danger,
        .btn-info {
            margin: 5px;
            border: none;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-info {
            background-color: #17a2b8;
        }

        .btn-primary:hover,
        .btn-danger:hover,
        .btn-info:hover {
            opacity: 0.85;
        }

        /* İşlem Düğmeleri ve Durumlar */
        .badge-success {
            background-color: #28a745;
        }

        .btn-info.btn-sm {
            padding: .25rem .5rem;
            font-size: .875rem;
            line-height: 1.5;
            border-radius: .2rem;
        }

        /* Detaylar ve İşlemler Sütunu Stilleri */
        td:last-child {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        /* Düzgün kenarlar ve padding için */
        th,
        td {
            padding: 12px 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

        /* Her ikinci satırı daha belirginleştirmek için */
        tbody tr:nth-of-type(even) {
            background-color: #f9f9f9;
        }
    </style>