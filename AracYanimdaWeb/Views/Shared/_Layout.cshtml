<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    @RenderSection("Css",false)
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="shortcut icon" href="~/img/arac.png" type="image/x-icon">

    <title>Aracım Yanımda</title>
    <style>
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            background-color: #f8f9fa;
            /* Hafif gri bir arka plan */
        }

        .navbar-brand a {
            font-weight: bold;
            color: #333;
            text-decoration: none;
        }

        .nav-links a {
            margin-right: 12px;
            text-decoration: none;
            color: #555;
        }

        .nav-user {
            display: flex;
            align-items: center;
        }

        .user-name {
            margin-right: 20px;
            font-weight: bold;
            font-size: larger;
            color: #333;
        }

        .logout-btn {
            padding: 5px 10px;
            text-decoration: none;
            color: white;
            background-color: #007bff;
            /* Bootstrap primary rengi */
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .logout-btn:hover {
            background-color: #0056b3;
        }

        .custom-footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #333;
            /* Arka plan rengi */
            color: #fff;
            /* Metin rengi */
            text-align: center;
            /* Metin hizalaması */
            padding: 1rem;
            /* Padding değeri */
            font-family: Arial, sans-serif;
            /* Yazı tipi */
            border-top: 2px solid #555;
            /* Üst kenar çizgisi */
            box-shadow: 0px -5px 15px 0px rgba(0, 0, 0, 0.7);
            /* Gölgelendirme */
        }

        .footer-content {
            margin: 10px;
            font-size: 18px;
        }

        .custom-footer a {
            color: #ff9900;
            /* Link rengi */
            text-decoration: none;
            /* Link alt çizgiyi kaldırır */
        }

        /* Base styles */
        body,
        html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Navbar Styles */
        .navbar {
            background-color: #0056b3;
            /* A nice shade of blue */
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        .navbar a {
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .navbar a:hover {
            background-color: #004494;
            /* Darken the color on hover */
        }

        .navbar-brand a {
            font-weight: bold;
            font-size: 1.5em;
            /* Larger size for brand/logo */
        }

        .nav-links a {
            margin-right: 15px;
            /* Space out the navigation links */
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        /* Footer Stilleri */
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px 0;
            font-size: 0.9rem;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
            /* Üst kısmında gölge */
        }

        .footer .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .footer span {
            margin: 0 15px;
        }

        .footer-links {
            display: flex;
            list-style-type: none;
            padding: 0;
        }

        .footer-links a {
            color: white;
            text-decoration: none;
            margin-left: 15px;
            transition: color 0.3s;
        }

        .footer-links a:hover {
            color: #ade2ff;
            /* Hover rengi */
        }
    </style>
</head>

<body>
    <nav class="navbar">
        <div class="container">
            <!-- Brand -->
            <div class="navbar-brand">
                <a href="/Home/Index">Arac Yanımda</a>
            </div>

            <!-- Links -->
            <div class="nav-links">
                <a href="/Vehicle/List">Araç Yönetimi</a>
                <a href="/User/List">Kullanıcı Yönetimi</a>
                <a href="/Payment/List">Ödemeler</a>

            </div>

            <!-- User or Profile section -->
            <div class="nav-user">
                <span class="user-name"> @User.Identity.Name</span>
                <a href="/Admin/Logout" class="btn">Çıkış Yap</a>

            </div>
        </div>
    </nav>
    <!-- Navigation Bar Structure -->


    <br>

    <div class="container">



        @RenderBody()
    </div>
    </main>
    <br><br><br>
    <footer class="footer">
        <div class="container">
            <span>© 2023 AracYanimda - Tüm hakları saklıdır.</span>
            <div class="footer-links">
                <a href="/hakkimizda">Hakkımızda</a>
                <a href="/iletisim">İletişim</a>
                <a href="/gizlilik">Gizlilik Politikası</a>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    @RenderSection("Scripts",false)
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>



</body>

</html>