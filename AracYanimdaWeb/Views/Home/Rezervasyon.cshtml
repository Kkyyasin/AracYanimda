@model Rezervasyon
<div class="container">
    <h2 class="display-4">Rezervasyon Bilgileri</h2>
    <br>
    <div class="container container2">
        <div class="row container2">
            <div class="col-md-6">
                <h2>Kullanıcı Bilgileri</h2>
                <hr>
                <ul class="list-group">
                    <li class="list-group-item">Ad: <strong>@ViewBag.user.Ad</strong></li>
                    <li class="list-group-item">Soyad: <strong>@ViewBag.user.Soyad</strong></li>
                    <li class="list-group-item">E-posta: <strong>@ViewBag.user.EPosta</strong></li>
                    <li class="list-group-item">Telefon: <strong>@ViewBag.user.Telefon</strong></li>
                    <li class="list-group-item">Kayıt Tarihi: <strong>@ViewBag.user.KayitTarihi</strong></li>
                    <li class="list-group-item">Kayıt Tarihi: <strong>@ViewBag.user.Durum</strong></li>
                </ul>
                <a href="/User/Index/@ViewBag.user.UserId" class="btn btn-primary form-control">Git</a>
            </div>
            <div class="col-md-6">
                <h2>Araç Bilgileri</h2>
                <hr>
                <ul class="list-group">
                    <li class="list-group-item">Araç Markası: <strong>@ViewBag.vehicle.Marka</strong></li>
                    <li class="list-group-item">Araç Modeli: <strong>@ViewBag.vehicle.Model</strong></li>
                    <li class="list-group-item">Araç Plaka: <strong>@ViewBag.vehicle.Plaka</strong></li>
                    <li class="list-group-item">Yıl: <strong>@ViewBag.vehicle.Yil</strong></li>
                    <li class="list-group-item">Yakit Tipi: <strong>@ViewBag.vehicle.YakitTipi</strong></li>

                    <li class="list-group-item">Yakit Durumu: <strong>@ViewBag.vehicle.YakitDurumu</strong></li>
                </ul>
                <a href="/Vehicle/Index/@ViewBag.vehicle.VehicleId" class="btn btn-primary form-control">Git</a>
            </div>
        </div>
    </div>
    <br>
    <div class="container container2">
        <div class="row container2">
            <div class="col-md-6">
                <h2>Ödeme Bilgileri</h2>
                <hr>
                <ul class="list-group">
                    <li class="list-group-item">Ödeme Türü: <strong>Kart</strong></li>
                    <li class="list-group-item">Ödeme Tutarı: <strong>@ViewBag.payment.Miktar</strong></li>
                    <li class="list-group-item">Ödeme Durumu: <strong>@ViewBag.payment.OdemeDurumu</strong></li>


                </ul>

            </div>
            <div class="col-md-6">
                <h2>Durum Gösterimi</h2>
                <hr>
                <ul class="list-group">
                    <li class="list-group-item">Rezervasyon Durumu: <strong>@Model.Durum</strong></li>

                    <li class="list-group-item">Başlangıç Tarihi: <strong>@Model.BaslangicTarihi</strong></li>
                    <li class="list-group-item">Bitiş Tarihi: <strong>@Model.BitisTarihi</strong></li>
                </ul>

            </div>
        </div>
    </div>
</div>
